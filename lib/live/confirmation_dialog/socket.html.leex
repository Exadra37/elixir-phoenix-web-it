<div class="confirmation-dialog">
<div class="confirmation-dialog-question" data-modal-id="confirmation-dialog-<%= @id %>">
  <%= @question %>
</div>

<div class="confirmation-dialog-buttons">
  <button
    class="button button-outline confirmation-dialog-cancel"
    type="button"
    phx-click="<%= @buttons.left.phx_click %>"
    <%= @buttons.left.phx_values %>
  ><%= @buttons.left.text %></button>

  <button
    class="button confirmation-dialog-accept"
    type="button"
    phx-click="<%= @buttons.right.phx_click %>"
    <%= @buttons.right.phx_values %>
  ><%= @buttons.right.text %></button>
</div>
</div>
